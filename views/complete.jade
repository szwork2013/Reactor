html
  head
    title 离场确认
    meta(charset='utf-8')
    // meta(name='viewport')(content='width=360, initial-scale=1.0, minimum-scale=1.0,  maximum-scale=1.0, user-scalable=no')
    style.
      * {
      padding:0;
      margin:0;
      font-family:'Microsoft YaHei UI' , '黑体';
      font-size:30px;
      }
      body {
      overflow-x:hidden;
      overflow-y:auto;
      /*width: 720px;
      zoom:0.5;*/
      }
      ul,
      li {
      list-style:none;
      
      }
      header {
      margin:10px 0 10px 20px;
      }
      header span{
      font-size:24px;
      opacity:0.5;
      margin-right:15px;
      }
      header span:first-child{
      font-size:48px;
      opacity:1;
      }
      ul {
      margin:0 0 10px 20px;
      }
      ul:empty:before{
      content:"离场确认，等待扫码... ...";
      position:absolute;
      top:400px;
      left:85px;
      font-size:36px;
      }
      ul.status1:before,
      ul.status2:before {
      content:"";
      }
      li{
      width:245px;
      height:245px;
      background:#2b9eff;
      color:#fff;
      margin-bottom:10px;
      margin-right:10px;
      float:left;
      position:relative;     
      }
      li:active {
      background-color:rgba(0,0,0,0.8) !important;
      }
      li > span {
      position:absolute;
      bottom:15px;
      left:15px;
      }
      li.giveup {
      background:#959595;
      background-image: url("data:image/png;base64,");
      background-position: 0px -40px;
      background-repeat:no-repeat;
      background-size:245px;
      }
      li.reschedule {
      background:#959595;
      background-image: url("data:image/png;base64,");
      background-position: 0px -40px;
      background-repeat:no-repeat;
      background-size:245px;
      }
      li.sampling {
      background:#959595;
      background-image: url("data:image/png;base64,");
      background-position: 0px -40px;
      background-repeat:no-repeat;
      background-size:245px;
      }
      .bottom_button {
      position:fixed;
      left:0;
      bottom:0;
      right:0;
      height:50px;
      background:#000;
      }
      .status2 li{
      width:160px;
      height:160px;
      background-size:160px;
      background-position: 0px -20px;
      }
      .status2 li span{
      font-size:22px
      }
      .div_progress {
      display:none;
      }
      .progress .div_progress {
      display:block;
      position:absolute;
      top:350px;
      bottom:0;
      left:10%;
      right:0;
      background:rgba(0,0,0,0.85);
      color:#fff;
      font-size:36px;
      width:80%;
      height:100px;
      line-height:100px;
      display:block;
      z-index:10;
      text-indent:80px;
      }
      .progress .div_progress:after {
      content:"";
      position:fixed;
      top:0;
      bottom:0;
      left:0;
      right:0;
      background:rgba(0,0,0,0.2);
      }
  body
    //div.div_progress 等待服务器响应... ...
    header
      span.name
      span.sex 
      span.age 
    ul
    script#template(type="text/template")
      {{#.}}
      li(class='{{status}}')(_id= '{{_id}}')
        span {{name}}
      {{/.}}
    script(src='/vendor/jquery.js')
    script(src='/vendor/mustache.js')
    script(src='/vendor/underscore-min.js')
    script(src='/vendor/hammer.js')
    script(src='/pages/barcode.js')
    script(src='/pages/complete.js')
